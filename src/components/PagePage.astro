---
import PostInfo from '@components/fragments/PostInfo.astro'
import PostText from '@components/fragments/PostText.astro'
import { type Language } from '@lib/language'
import { Page } from '@lib/pages'

type Props = {
  language: Language
  page: Page
}

const { language, page } = Astro.props

const { Content, headings } = await page.collectionEntry.render()
---

<article>
  <div class="d-flex">
    <PostInfo
      language={language}
      page={page}
      headings={headings}
      isShowingMultiPosts={false}
    />
    <div class="post-wrap">
      <h1 class="post-title">
        <a href={page.getFullURL()} rel="bookmark" title={page.title}
          >{page.title}</a
        >
      </h1>
      <PostText>
        <Content />
      </PostText>
    </div>
  </div>
</article>
