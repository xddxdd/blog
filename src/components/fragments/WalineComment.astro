---
import { type Language } from '@lib/language'
import { Post } from '@lib/posts'

type Props = {
  language: Language
  post: Post
}

const { language, post } = Astro.props

const walineLanguageMapping: Record<string, string> = {
  en: 'en-US',
  zh: 'zh-CN',
}
const walineLanguage = walineLanguageMapping[language.getCode()]
if (!walineLanguage) {
  throw new Error(
    `Waline language mapping not found for: ${language.getCode()}`
  )
}
const walinePath = post.getFullURL().replace(/(\/+)$/, '')
---

<div
  id="waline"
  data-waline-language={walineLanguage}
  data-waline-path={walinePath}
>
</div>
<script>
  import { init } from '@waline/client'
  const walineElement = document.getElementById('waline')
  if (walineElement) {
    const origin =
      window.location.hostname == 'localhost'
        ? 'https://comments.lantian.pub'
        : window.location.origin
    const walineProps = walineElement.dataset
    init({
      el: '#waline',
      serverURL: origin,
      path:
        walineProps.walinePath ||
        (() => {
          throw new Error('walinePath is required')
        })(),
      lang:
        walineProps.walineLanguage ||
        (() => {
          throw new Error('walineLanguage is required')
        })(),
      requiredMeta: ['nick', 'mail'],
      login: 'disable',
      emoji: [
        'https://cdn.jsdelivr.net/gh/walinejs/emojis@1.0.0/tieba',
        'https://cdn.jsdelivr.net/gh/walinejs/emojis@1.0.0/bilibili',
      ],
      reaction: [],
    })
  }
</script>
