<div class="post-text">
  <slot />
</div>

<style lang="scss" is:global>
  @import '../../assets/sass/bootstrap_common.scss';

  .post-text {
    background-color: var(--lt-component-bg);

    > *:first-child {
      margin-top: 0 !important;
    }

    > *:last-child {
      margin-bottom: 0 !important;
    }

    p {
      word-wrap: break-word;
      word-break: normal;
    }
    img,
    svg {
      box-shadow: 0 0 10px var(--lt-page-shadow);
      max-width: 100%;
      margin-left: auto;
      margin-right: auto;
      display: block;
    }
    blockquote,
    pre {
      border-left: 5px solid var(--lt-component-bg-emphasis);
      padding-left: 8px;
    }
    code {
      border-bottom: 3px solid var(--lt-component-bg-emphasis);
    }

    pre code {
      border-bottom: none !important;
    }

    h1 {
      &:before {
        @include font-awesome;
        display: inline-block;
        content: fa-content($fa-var-angle-double-right);
      }
    }
    h2,
    h3,
    h4,
    h5,
    h6 {
      &:before {
        @include font-awesome;
        display: inline-block;
        content: fa-content($fa-var-angle-right);
      }
    }

    b,
    strong {
      font-weight: 700 !important;
      color: var(--lt-page-text-emphasis);
    }

    @include media-breakpoint-down(lg) {
      ol ol,
      ol ul,
      ul ol,
      ul ul {
        padding-left: 1em;
      }
    }

    table {
      display: block;
      width: 100%; // keep for backwards compatibility
      width: max-content;
      max-width: 100%;
      overflow: auto;

      margin-bottom: 1rem;

      th {
        font-weight: 700;
      }

      th,
      td {
        // stylelint-disable-next-line primer/spacing
        padding: 6px 13px;
        border: 1px solid var(--lt-border);
      }

      thead {
        background-color: var(--lt-component-bg-emphasis);
      }

      tr {
        border-top: 1px solid var(--lt-border);

        &:nth-child(2n) {
          background-color: var(--lt-component-bg-less-emphasis);
        }
      }
    }

    .btn-group-vertical > .btn-group,
    .btn-group-vertical > .btn {
      margin-left: 0 !important;
    }

    .header-anchor {
      margin-left: 0.25em;
    }

    #twine {
      width: 100%;
      border: none;
    }
  }
</style>
