---
import { getPosts, getStaticPathsForPaginate } from '../../../lib/posts';
import type { PaginatedProps } from '../../../lib/posts';
import PageLayout from '../../../components/PageLayout.astro';
import PagePost from '../../../components/PagePost.astro';
import PageArchive from '../../../components/PageArchive.astro';

export async function getStaticPaths() {
  const posts = await getPosts();
  return getStaticPathsForPaginate(posts);
}

type Props = PaginatedProps;
const { posts, page, language } = Astro.props;
const title = page == 1 ? undefined : `Page ${page}`;
---

<PageLayout title={title} language={language}>
  <PageArchive language={language} posts={posts} AdditionalTitle={undefined} />
</PageLayout>
