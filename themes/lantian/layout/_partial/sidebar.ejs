<aside class="d-none d-lg-block">
    <% if(site.posts.length) { %>
    <section class="widget">
        <h3><%- __('latest_articles') %></h3>
        <ul class="list-unstyled">
            <% posts_filter(site.posts).sort('date', 'desc').slice(0, 15).each(function(post) { %>
                <li><%= date(post.date, "MM-DD") %> <a href="<%- url_for(remove_trailing_slash(post.path)) %>"><%= post.title %></a></li>
            <% }) %>
        </ul>
    </section>
    <% } %>

    <% if(theme_config(page_language()).others) { %>
    <section class="widget">
        <h3><%- __('others') %></h3>
        <%- theme_config(page_language()).others %>
    </section>
    <% } %>

    <% if(theme_config(page_language()).links) { %>
    <section class="widget">
        <h3><%- __('links') %></h3>
        <ul class="list-unstyled">
            <% theme_config(page_language()).links.forEach(function(link) { %>
                <li><i class="fas fa-fw fa-link"></i> <a target="_blank" href="<%= link.url %>"><%= link.name %></a></li>
            <% }) %>
        </ul>
    </section>
    <% } %>
</aside>
