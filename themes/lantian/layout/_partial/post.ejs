<article>
    <div class="d-flex">
        <div class="post-info-wrap">
            <div class="post-info">
                <% if(post.date && post.date.unix() > 43200 /* Filter out posts before UTC & handle timezone which may be 12h off */) { %>
                    <div class="post-meta-wrap"><div class="post-meta">
                        <span class="fas fa-clock"></span>
                        <%- date(post.date, 'YYYY-MM-DD HH:mm') %>
                        &nbsp;
                    </div></div>
                <% } %>
                <% if (post.categories && post.categories.length) { %>
                    <div class="post-meta-wrap"><div class="post-meta">
                        <span class="fas fa-file-alt"></span>
                        <% (post._categories || post.categories).forEach(category => { %>
                            <a href="<%- url_for(remove_trailing_slash(category.path)) %>"><%= category.name %></a>
                        <% }) %>
                        &nbsp;
                    </div></div>
                <% } %>
                <% if(post.tags && post.tags.length) { %>
                    <div class="post-meta-wrap"><div class="post-meta">
                        <span class="fas fa-tag"></span>
                        <% (post._tags || post.tags).forEach(tag => { %>
                            <a href="<%- url_for(remove_trailing_slash(tag.path)) %>"><%= tag.name %></a>
                        <% }) %>
                        &nbsp;
                    </div></div>
                <% } %>
                <div class="post-meta-wrap"><div class="post-meta">
                    <span class="fas fa-qrcode"></span>
                    <%- __('show_qrcode') %>
                    <img class="qrcode" src="<%- qrcode(post.permalink) %>" alt="<%- __('show_qrcode') %>"/>
                </div></div>
                <% if(!index) { %>
                    <div class="post-meta-wrap"><div class="post-meta">
                        <span class="fas fa-list"></span>
                        <%- __('table_of_contents') %>
                        <ol id="quicklink">
                            <%- toc(page.content, {
                                list_number: false
                            }) %>
                        </ol>
                    </div></div>
                <% } %>
            </div>
        </div>
        <% if(index && post.image) { %>
            <div class="post-image-wrap d-none d-md-block">
                <img src="<%= image_version(post.image, {prefix: 'thumb'}) %>" alt="<%- __('illustration') %>" height="150" width="200"/>
            </div>
        <% } %>
        <div class="post-wrap">
            <h1 class="post-title"><a href="<%- url_for(remove_trailing_slash(post.path)) %>" rel="bookmark" title="<%= post.title %>"><%= post.title %></a></h1>
            <div class="post-text">
                <% if(index) { %>
                    <%- post.excerpt || lantian_excerpt(post.content) %>
                <% } else { %>
                    <%- post.content %>
                    <%- (post.special ? partial('../_special/' + post.special, {post: post, index: index}) : '') %>
                <% } %>
            </div>

            <% if(!index && (page.next || page.prev)) { %>
                <div class="clearfix" id="post-navi">
                    <% if(page.next) { %>
                        <div class="float-right text-right"><a href="<%- url_for(remove_trailing_slash(page.next.path)) %>" title="<%= page.next.title %>"><%= page.next.title %></a><br><%- __('next_post') %> &raquo;</div>
                    <% } %>
                    <% if(page.prev) { %>
                        <div class="float-left text-left position-absolute">&laquo; <%- __('previous_post') %><br><a href="<%- url_for(remove_trailing_slash(page.prev.path)) %>" title="<%= page.prev.title %>"><%= page.prev.title %></a></div>
                    <% } %>
                </div>
                <%- partial('_partial/comments') %>
            <% } %>
        </div>
    </div>
</article>
